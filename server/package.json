{
  "name": "vite-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "nodemon -w src -x tsx src/main.ts",
    "all": "npm-run-all --parallel dev client",
    "client": "cd ../client && vite",
    "start": "NODE_ENV=production tsx src/main.ts",
    "build": "vite build",
    "drizzle:studio": "drizzle-kit studio --port 3456 --verbose",
    "drizzle:generate": "drizzle-kit generate:pg",
    "drizzle:introspect": "drizzle-kit introspect:pg",
    "drizzle:migrate": "tsx src/data/migrate.ts"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.15",
    "@types/node": "^20.9.3",
    "drizzle-kit": "^0.20.17",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "pg": "^8.11.5",
    "prettier": "^3.2.5",
    "vite": "^5.0.2"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.0.0",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.9",
    "express": "^4.18.2",
    "postgres": "^3.4.4",
    "tsx": "^4.7.3",
    "typescript": "^5.3.2",
    "vite-express": "*",
    "zod": "^3.23.4"
  }
}
